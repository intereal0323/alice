<div class="topic-index-wrapper">
  <div class="container">
    <% @favorite_topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon'%>
            <%=link_to(image_tag 'icons/comment.png', class: 'topic-index-icon') %>
            <dl class="topic-text">
             <dt><%= topic.description %></dt><br>
             <dt><%= link_to_unless_current "コメント", favorites_show_path %></dt>
            </dl>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
