<div class="topic-index-wrapper">
  <div class="container">
    <% @commentm_topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon'%>
            <%=link_to(image_tag 'icons/comment.png', class: 'topic-index-icon') %>
            <p class="topic-text">
             <%= topic.description %></p>
             <dl>コメント</dl>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
